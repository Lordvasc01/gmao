<odoo>
    <data>

        <!-- Form Views -->


        <record model="ir.ui.view" id="view_gmao_group">
            <field name="name">liste des group</field>
            <field name="model">group</field>
            <field name="arch" type="xml">
                <form name="group form">
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="zone"/>
                                <field name="entite"/>
                                <field name="famille"/>
                                <field name="etat_eqpt"/>
                            </group>
                            <group>
                                <field name="desc"/>
                                <field name="fonc"/>
                                <field name="famille"/>
                                <field name="type_permis"/>
                                <field name="pt_ot_correctif"/>
                                <field name="eqpt_arret"/>
                            </group>
                        </group>

                        <notebook>

                            <page string='Détails'>
                                <group>
                                    <group>
                                        <field name="calcul"/>
                                        <field name="c_charge"/>
                                        <field name="resp"/>
                                    </group>
                                    <group>
                                        <field name="calcul"/>
                                        <field name="alloc_cout" widget="radio" options='{"vertical": 1}'/>
                                    </group>
                                    <group>
                                        <field name="nb_eqpt"/>
                                        <field name="priorite"/>
                                        <field name="hist"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Equipements">
                                <field name="eqpts"/>
                            </page>

                            <page string="Contrats">
                                <field name="contrats"/>
                            </page>

                            <page string="Coûts">
                                <field name="cout"/>
                            </page>

                            <page string="Attributs">
                                <field name="attributs"/>
                            </page>

                            <page string="Calendrier">
                            </page>

                            <page string="MàJ Etat">
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree views -->

        <record model="ir.ui.view" id="group">
            <field name="name">group_tree</field>
            <field name="model">group</field>
            <field name="arch" type="xml">
                <tree string="group tree">
                    <field name="code" />
                    <field name="desc"/>
                    <field name="zone"/>
                    <field name="fonc"/>
                    <field name="famille"/>
                    <field name="c_charge"/>
                    <field name="entite"/>

                </tree>
            </field>
        </record>

        <!-- Actions -->


        <record model="ir.actions.act_window" id="action_gmao_group">
            <field name="name">Groupe</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">group</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
        Create your piece
                </p>
                <p>
        details
                </p>
            </field>
        </record>

    </data>
</odoo>